# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ridaa
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ridaa?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_JWT_SECRET=your-admin-jwt-secret-change-this-in-production
JWT_EXPIRE=7d
JWT_ISSUER=http://localhost:3000
JWT_AUDIENCE=your-app-client

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (Gmail SMTP)
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting (DDoS Protection)
# General API: 100 requests per 15 minutes (900000ms)
# Auth endpoints: 5 requests per 15 minutes
# Strict endpoints (password reset, etc.): 3 requests per hour
# Public endpoints (products, etc.): 60 requests per minute
# Set DISABLE_RATE_LIMIT=true to disable (not recommended for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
DISABLE_RATE_LIMIT=false

