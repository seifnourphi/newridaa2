# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ridaa

# JWT Secrets (REQUIRED - Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
# 5242880 bytes = 5MB

# Rate Limiting (Optional)
DISABLE_RATE_LIMIT=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1500

# Email Configuration (Optional - for password reset, verification, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ridaa.com

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# User JWT Secret (Optional - if different from JWT_SECRET)
USER_JWT_SECRET=

# CSRF Secret (Optional - auto-generated if not set)
CSRF_SECRET=

